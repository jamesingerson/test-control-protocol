{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Test Control Protocol",
	"patterns": [
		{
			"include": "#invalid"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"invalid": {
			"patterns": [
				{
					"name": "invalid.too-long.testcontrolprotocol",
					"match": "^.{80}.*\n"
				},
				{
					"name": "invalid.illegal-character.testcontrolprotocol",
					"match": "^.{6}[^\\s].*\n"
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.testcontrolprotocol",
				"match": "^.{7}\\*.*\n"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.testcontrolprotocol",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.testcontrolprotocol",
			"begin": "^.{7}A.{10}\\K",
			"end": "\n",
			"patterns": [
				{
					"name": "constant.testcontrolprotocol",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.testcontrolprotocol"
}